    <Border CornerRadius="20,20,0,0" Background="#2c2b2a" Height="35" VerticalAlignment="Top">
        <StackPanel VerticalAlignment="Top" Width="700" Margin="0,0,0,0" Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Height="35">

            <Button Width="25" Cursor ="Hand" Height="23" Margin="10,0,15,0" Click="Exit">
                <TextBlock Text="X" FontSize="18" FontWeight="Heavy" />
            </Button>
            
            <Button Margin="5,0,28,0" Cursor ="Hand" Width="190" HorizontalAlignment="Center" Height="23" Command="{Binding UpdateCurrentVMCommand}" CommandParameter="{x:Static navigation:ViewType.Calendar}" Click="Button_Click">
                <TextBlock FontWeight="Medium" Text="КАЛЕНДАРЬ"/>
            </Button>

            <Button Margin="5,0,28,0" Height="23" Width="190" Command="{Binding UpdateCurrentVMCommand}" CommandParameter="{x:Static navigation:ViewType.Gifts}">
                <TextBlock FontWeight="Medium" Text="ПОДАРОК"/>
            </Button>

            <Button Margin="5,0,28,0" Width="190" Height="23" Command="{Binding UpdateCurrentVMCommand}" CommandParameter="{x:Static navigation:ViewType.Contacts}">
                <TextBlock FontWeight="Medium" Text="ЛЮДИ"/>
