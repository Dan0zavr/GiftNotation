<Window x:Class="виш_лист_попытка_33334.EventDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:виш_лист_попытка_33334"
        mc:Ignorable="d"
        Title="EventDetailsWindow" Height="260" Width="400">
    <Grid>
        <Border BorderThickness="1" Margin="65,45,0,0" BorderBrush="Black" Padding="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="100">
            <TextBlock x:Name="EnterDate" HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Center" FontStyle="Italic" FontSize="10" />
        </Border>

        <TextBlock TextAlignment="Center" FontStyle="Italic" FontSize="10" Margin="20,53,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Text="Дата" />

        <Border BorderThickness="1" BorderBrush="Black" Padding="2" HorizontalAlignment="Center" VerticalAlignment="Top" Height="25" Width="350" Margin="0,10,0,0">
            <TextBox x:Name="VvodPogarkov" MaxLength="250" TextChanged="ChangedZhach" />
        </Border>

        <Button Click="Button_Soxran" Background="White" Cursor ="Hand" Margin="350,170,0,26" HorizontalAlignment="Left" Height="25" Width="25" Content="ОК" FontFamily="Bold"/>

        <TextBlock TextAlignment="Center" FontStyle="Italic" FontSize="10" Margin="20,95,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Text="Тип" />

       

        <ComboBox x:Name="Tip_prasdnicaa" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="65,90,0,0" Width="100" RenderTransformOrigin="0.534,1.109" SelectionChanged="ComboBox_SelectionChanged"/>

        <TextBlock TextAlignment="Center" FontStyle="Italic" FontSize="10" Margin="20,130,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Text="Люди" />

        <TextBlock TextAlignment="Center" FontStyle="Italic" FontSize="10" Margin="20,169,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Text="Подарки" />

    </Grid>
</Window>
